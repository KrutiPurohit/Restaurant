@model BusinessObjects.CuisineBO
@{
    ViewBag.Title = "Cuisine Add";
}

<script type="text/javascript" language="jscript">
    $(document).ready(function () {
        $('#save').click(function () {
            finalSubmit();
        });
    });
    function finalSubmit() {
        var RestaurantID = $('#Restaurants').val();
        $('#txtResturantID').val(RestaurantID);
    }
</script>

@using (Html.BeginForm("CuisineAdd", "Cuisine", FormMethod.Post))
{
    <div class="container mt-3">

        <div class="p-2 pt-md-4 pb-md-3 mx-auto text-center">
            <h1 class="display-4">Cuisine [Add]</h1>
        </div>
        <div class="col-md-6 offset-2 align-content-end mr-5 ">
            <div class="row">
                <div class="col-md-12 mb-3 form-group">
                  
                    @Html.LabelFor(Model => Model.RestaurantID, new { @class = "control-label" })
                    @Html.TextBoxFor(Model => Model.RestaurantID, new { @type = "hidden", id = "txtResturantID", @class = "form-control" })
                    @Html.DropDownListFor(Model => Model.RestaurantID, Model.RestaurantNames, new { @class = "form-control", id = "Restaurants" })
                    @Html.ValidationMessageFor(Model => Model.RestaurantNames, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="mb-3">
                <div class="row">
                    <div class="col-md-12 form-group">
                        @Html.LabelFor(Model => Model.CuisineName, new { @class = "control-label" })
                        @Html.TextBoxFor(Model => Model.CuisineName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(Model => Model.CuisineName, null, new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <button class="btn btn-success btn-lg btn-block mb-4" type="submit" value="save" name="save" id="save">
                Add Cuisine
            </button>
        </div>
    </div>
}


