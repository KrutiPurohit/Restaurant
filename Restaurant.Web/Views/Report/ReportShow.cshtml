@model IEnumerable<BusinessObjects.ReportFilterBo>
@{
    ViewBag.Title = "ReportShow";
}

<div class="container mt-3">

    <div class="p-2 pt-md-4 pb-md-3 mx-auto text-center">
        <h1 class="display-4">Report</h1>
    </div>

    <table style="width:100%" class="table table-bordered table-dark table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Customer Name
                </th>
                <th>
                    Order Date
                </th>
                <th>
                    Restaurant Name
                </th>
                <th>
                    Location
                </th>
                <th>
                    Order Amount
                </th>
            </tr>
        </thead>
 @foreach (var report in Model)
  {
    <tr>
        <td>
            @report.CustomerName
        </td>
        <td>
            @report.OrderDate
        </td>
        <td>
            @report.RestaurantName
        </td>
        <td>
            @report.Location
        </td>
        <td>
            @report.OrderAmount
        </td>
    </tr>
 }
    </table>
</div>

